<ul class="media-list">
  <% tasks.each do |task| %>
    <% user = task.user %>
    <li class="media">
      <div class="media-body">
        <div>
          <span class="text-muted">
            投稿日： <%= datetime_to_ja(task.created_at) %>
          </span>
        </div>
        <div>
          <p>
            <span class="label label-<%= label_color(task.status) %>">
              <%= task.status %>
            </span>
            <%= task.content %>
          </p>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to "Show", task, class: 'btn btn-primary btn-xs' %>
            <%= link_to "Edit", edit_task_path(task), class: 'btn btn-warning btn-xs' %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
            
          <% end %>
        </div>
      </div>
    </li><hr>
  <% end %>
  <%= paginate tasks %>
</ul>