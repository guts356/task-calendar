<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <%= f.select :status, [:未着手, :着手中, :完了], {}, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        
        <div class="form-group">
          <%#= f.datetime_field :task_date %>
        </div>


        <div class="form-group">
            <div class='input-group date' id='datetimepicker1'>
                <input type='text' name='task_date' class="form-control" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>

        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
        <p>タスク詳細</p>
    <div class="col-xs-8">
      <%= render 'tasks/tasks', tasks: @tasks, user: @user %>
    </div>
        
      <% end %>
    </aside>

    <div class="col-xs-8">
      <div id="calendar"></div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the task-calendar</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>


<%= @event = @events.to_json %>

